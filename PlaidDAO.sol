contract PLDManage is Ownable {
    using SafeMath for uint256;
    using ECDSA for bytes32;
    address public signer;

    AggregatorV3Interface internal priceFeed;
    uint public month = 2592000;

    address[] team;   
    uint all = 10**27;       
    address exchequerAddress;
    uint public airDrop = all.div(100).mul(10);     
    uint public exchequer = all.div(100).mul(15);       
    uint public salePrice = 6396;                     
    uint public startPrice = 300000000000000000;       
    uint public limitPrice = 1500000000000000000;
    uint public surplus = all.div(1000).mul(25);                   
    uint public airDropSurplus = all.div(100).mul(10); 
    bool public saleStatus = false;
    
    bytes32 TEAMHASH = 0x585ddd47b1c58a325beb7b9d64a785c7447b32661c5353cb749f8436f0b1c071;
    bytes32 EXCHEQUERHASH = 0xa094435f431485e9ac8a21e0d6656b7c3ed5064de3236058aac1714ce0286e61;
    bytes32[] fundsCategory;

    
    struct UserLockData {
        uint256 receiveStage;
        uint256 lockFundNUmber;
        bool isSwap;
        uint256 startTime;
    }

    struct FundsLockData {
        uint currLockStage;
        uint totalLockStage;
        uint currUnlockFunds;
        uint totalFunds;
        uint currUseFunds;
    }


    mapping(address=>UserLockData) userlock;
    mapping(bytes32=>FundsLockData) fundlock;
    mapping(bytes=>bool) hashUseState;
    mapping(address=>uint256) userHoldFunds;
    mapping(uint=>bool) idState;
    address pldAddr;

    event receiveAirdropEvent(address indexed _user, uint256 indexed time, bytes32 indexed hashVue,uint256 _amount);
    event withDrawLockFundsEvent(address indexed _user, uint256 indexed stage, uint256 indexed _amount);
    event swapPLDEvent(address indexed _user, uint256 indexed fundseth, uint256 indexed tokenTotal,uint256 tokenGet);

    modifier notClose(){
        require(saleStatus,"Fail: This is not a sales stage");
        _;
    }


    receive() external payable {}

    constructor(address[] memory _team, address _priceFeed,address _signer,address _exchequer,address _addr) {
        pldAddr = _addr;
        initTeam(_team);
        initCategory();
        priceFeed = AggregatorV3Interface(_priceFeed);
        signer = _signer;
        exchequerAddress = _exchequer;
        
    }

    function editSaleStatus(bool _saleStatus) public onlyOwner {
        saleStatus = _saleStatus;
    }

    function editMonth(uint _month) public onlyOwner {
        month = _month;
    }

    function editSigner(address _signer) public onlyOwner {
        require(_signer != address(0x0),"Fail: Signer is not be zero address");
        signer = _signer;
    }


    function getLatestPrice() public view returns (int) {
        (
            int price,
        ) = priceFeed.latestRoundData();
        return price;
    }

    function setPriceFeed(address _priceFeed) public onlyOwner {
        priceFeed = AggregatorV3Interface(_priceFeed);
    }
    function initCategory() internal {
        fundsCategory.push(TEAMHASH);
        fundsCategory.push(EXCHEQUERHASH);

        for(uint256 i = 0; i < fundsCategory.length ; i++){
           initCategoryData(fundsCategory[i]);
        }
    }
    function initCategoryData(bytes32 _category) internal {
        if(_category == TEAMHASH){
            uint fundsNum = all.div(100).mul(18);
            fundlock[_category] = FundsLockData(1,20,0,fundsNum,0);
        }else if(_category == EXCHEQUERHASH){
            uint fundsNum = all.div(100).mul(15);  
            fundlock[_category] = FundsLockData(1,15,0,fundsNum,0);
        }else{
            revert("Fail: the category is not exists");
        }
    }

    function initTeam(address[] memory _team) internal {
        for(uint256 i = 0; i < _team.length ; i++){
            team.push(_team[i]);
        }
    }



    function editStage() public onlyOwner{
        for(uint256 i = 0; i < fundsCategory.length ; i++){
           editCategoryData(fundsCategory[i]);
        }
    }

    function editCategoryData(bytes32 _category) internal {
        FundsLockData memory categoryData= fundlock[_category];
        if(categoryData.currLockStage <= categoryData.totalLockStage){
            _transferFunds(_category);
            fundlock[_category].currLockStage = fundlock[_category].currLockStage.add(1);
            fundlock[_category].currUnlockFunds = fundlock[_category].currUnlockFunds.add(fundlock[_category].totalFunds.div(fundlock[_category].totalLockStage));
        }

    }
    function _transferFunds(bytes32 _category) internal {
        bool status = false;
        bytes memory data;
        if(_category == EXCHEQUERHASH){
            (status,data) = address(pldAddr).call(abi.encodeWithSignature('transByOperator(address,uint256)',exchequerAddress,fundlock[_category].totalFunds.div(fundlock[_category].totalLockStage)));
            require(status,"Fail: Transfer fail");
        }else if(_category == TEAMHASH){
            uint teamlen =  team.length;
            for(uint256 i = 0; i < teamlen; i++){
                status = false;
               (status,data) = address(pldAddr).call(abi.encodeWithSignature('transByOperator(address,uint256)',team[i],fundlock[_category].totalFunds.div(fundlock[_category].totalLockStage).div(teamlen)));
                require(status,"Fail: Transfer fail");
            }
        }

    }
    function swapPLD(bytes memory _hash) public payable notClose returns(bool){
        require(msg.value >= startPrice,"Fail: Minimum bid price should be more than starting price (0.3ETH)");
        require(userHoldFunds[msg.sender] + msg.value <= limitPrice,"Fail: Maximum purchase amount exceeded");
        
        uint256 _tokenAmount = msg.value.mul(uint(getLatestPrice())).div(100000000).mul(100000).div(salePrice);

        require(surplus >= _tokenAmount,"Fail: Sold out");

        bytes32 hash = keccak256(abi.encodePacked(msg.sender));
        bool verify =  _verify(hash,_hash,signer);
        require(verify,"Fail: Invalid signer");

        bool status = false;
        bytes memory data;
        surplus = surplus.sub(_tokenAmount);

        UserLockData memory currData = userlock[msg.sender];
        if(!currData.isSwap){
            userlock[msg.sender] = UserLockData(0,_tokenAmount.mul(4).div(5),true,block.timestamp);
        }else{
            userlock[msg.sender].lockFundNUmber = _tokenAmount.mul(4).div(5).add(currData.lockFundNUmber);
        }
        
        
        userHoldFunds[msg.sender] = userHoldFunds[msg.sender] +msg.value;
        (status,data) = address(pldAddr).call(abi.encodeWithSignature('transByOperator(address,uint256)',msg.sender,_tokenAmount.div(5)));
        require(status,"Fail: Transfer fail");

        emit swapPLDEvent(msg.sender,msg.value, _tokenAmount,_tokenAmount.div(5));
        return true;
    }

    function getUserLockFunds(address _user) public view returns(uint256,uint256){
        UserLockData memory userData = userlock[_user];
        return (userData.receiveStage,userData.lockFundNUmber);
    }

    function withDrawLockFunds() public returns(bool){
        require(userlock[msg.sender].isSwap,"Fail: No right to withdraw locked tokens");
        uint userSwapStage = getStageByTime(userlock[msg.sender].startTime);
        require(userSwapStage > 0 && userSwapStage > userlock[msg.sender].receiveStage,"Fail: Assets have been locked and are currently unable to be withdrawn");

        uint lockFundNum = userSwapStage.sub(userlock[msg.sender].receiveStage);
        uint withdrawFund =  userlock[msg.sender].lockFundNUmber.div(4).mul(lockFundNum);
         bool status = false;
        bytes memory data;
        userlock[msg.sender].receiveStage = userSwapStage;
        (status,data) = address(pldAddr).call(abi.encodeWithSignature('transByOperator(address,uint256)',msg.sender,withdrawFund));
        require(status,"Fail: Transfer fail");
        emit withDrawLockFundsEvent(msg.sender, userSwapStage, withdrawFund);
        return true;
    }

    function getStageByTime(uint _time) internal view returns(uint){
        if( block.timestamp <  _time.add(month) ){
            return 0;
        }else if(block.timestamp >=  _time.add(month) && block.timestamp <  _time.add(month.mul(2)) ){
            return 1;
        }else if(block.timestamp >=  _time.add(month.mul(2)) && block.timestamp <  _time.add(month.mul(3)) ){
            return 2;
        }else if(block.timestamp >=  _time.add(month.mul(3)) && block.timestamp <  _time.add(month.mul(4)) ){
            return 3;
        }else{
            return 4;
        }

    }

    function _verify(bytes32 data, bytes memory signature, address account) internal pure returns (bool) {
        return data
            .toEthSignedMessageHash()
            .recover(signature) == account;
    }

    function receiveAirdrop(uint256 _apply, uint256 _expir,uint256 _amount,uint256[] memory _ids, string memory _idstr,bytes memory _hash) public {
        require(block.timestamp < _expir,"Fail: Signature expired");
        require(airDropSurplus >= _amount,"Fail: Assets insufficient for airdrop");
        checkIds(_ids);
        bytes32 hashVue = keccak256(abi.encodePacked(msg.sender,_apply,_expir,_amount,_idstr));
        bool verify =  _verify(hashVue,_hash,signer);
        require(verify,"Fail: Invalid signer");
        require( !hashUseState[_hash],"Fail: Signature occupied");
        hashUseState[_hash] = true;
        bool status = false;
        bytes memory data;
        airDropSurplus = airDropSurplus.sub(_amount);
        (status,data) = address(pldAddr).call(abi.encodeWithSignature('transByOperator(address,uint256)',msg.sender,_amount));
        require(status,"Fail: Transfer fail");

        emit receiveAirdropEvent(msg.sender, block.timestamp, hashVue, _amount);
    }

    function checkIds(uint256[] memory _ids) internal {
        for(uint256 i = 0; i < _ids.length ; i++){
          require(!idState[_ids[i]],"Fail: This ID has been settled");
          idState[_ids[i]] = true;
        }
    }

    function withdrawFunds(address _addr) public onlyOwner {
        payable(_addr).transfer(address(this).balance);
    }

}



